<main>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card shadow p-4" style="width: 100%; max-width: 550px; border-radius: 1rem;">
            <h2 class="perfil-titulo">
                {{#es_propio}}Perfil de Usuario{{/es_propio}}
                {{^es_propio}}Perfil del Jugador{{/es_propio}}
            </h2>
            <div class="text-center mb-3">
                <img src="/public/uploads/{{foto_perfil}}" class="rounded-circle border border-3 shadow-sm"
                     style="width: 120px; height: 120px; object-fit: cover;" alt="Foto de perfil">
            </div>
            <div class="perfil-datos">
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong> Usuario:</strong> {{nombre_usuario}}</li>
                    <li class="list-group-item"><strong> Email:</strong> {{email}}</li>
                    <li class="list-group-item"><strong> Nombre:</strong> {{nombre}}</li>
                    <li class="list-group-item"><strong> Nacimiento:</strong> {{fecha_nacimiento}}</li>
                    <li class="list-group-item"><strong> Sexo:</strong> {{sexo}}</li>
                    <li class="list-group-item"><strong> País:</strong> {{pais}}</li>
                    <li class="list-group-item"><strong> Ciudad:</strong> {{ciudad}}</li>
                </ul>
            </div>
            <div id="mapPerfil" style="height: 300px; border-radius: 1rem;"></div>
            {{#es_propio}}
                <div class="perfil-accion">
                    <a href="#" class="btn-editar">Editar Perfil</a>
                    <a class="btn-salir" href="/login/logout">Cerrar Sesión</a>
                </div>
            {{/es_propio}}
        </div>
    </div>
</main>

<script>
    const userLat = Number({{latitud}}) || -34.6037;
    const userLon = Number({{longitud}}) || -58.3816;
</script>