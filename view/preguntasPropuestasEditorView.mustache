<h2>Preguntas Propuestas</h2>

{{#preguntas}}
    <div class="card mb-3">
        <div class="card-header fw-bold">
            {{pregunta}} ({{categoria}}) - Propuesta por {{nombre_usuario}}
        </div>
        <ul class="list-group list-group-flush">
            {{#respuestas}}
                <li class="list-group-item">{{respuesta}} {{#es_correcta}}âœ…{{/es_correcta}}</li>
            {{/respuestas}}
        </ul>
        <div class="card-footer d-flex gap-2">
            <form action="/editor/aceptarPropuesta" method="POST">
                <input type="hidden" name="id_pregunta_propuesta" value="{{id_pregunta_propuesta}}">
                <button class="btn btn-success">Aceptar</button>
            </form>
            <form action="/editor/rechazarPropuesta" method="POST">
                <input type="hidden" name="id_pregunta_propuesta" value="{{id_pregunta_propuesta}}">
                <button class="btn btn-danger">Rechazar</button>
            </form>
        </div>
    </div>
{{/preguntas}}

{{^preguntas}}
    <p>No hay preguntas propuestas pendientes.</p>
{{/preguntas}}