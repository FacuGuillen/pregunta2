<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <a class="navbar-brand text-nav" href="/lobby/show"><img class="img-nav" src="{{BASE_URL}}/public/imgs/logo.png"> </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
        <ul class="navbar-nav align-items-center">

            {{#username}}
                <li class="nav-item text-white mx-2 ms-5 text-nav fs-5">
                   Hola, {{username}}!
                </li>
                <li class="nav-item">
                    <a class="nav-link text-nav ms-5 fs-5" href="/profile/show">Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-nav ms-5 fs-5" href="/login/logout">Salir</a>
                </li>
            {{/username}}

            {{^username}}

                <li class="nav-item">
                    <a class="btn btn-warning me-2" href="/register/show">Registrarse</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-light me-2" href="/login/show">Login</a>
                </li>
            {{/username}}

        </ul>
    </div>
</nav>
